         <TextField fx:id="txtLoanAmount" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <TextField fx:id="txtMonthlyPayment" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <TextField fx:id="txtTotalPayment" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      </children>
   </GridPane>

  <Label fx:id="welcomeText" />
